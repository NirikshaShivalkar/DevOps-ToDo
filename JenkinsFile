pipeline {
    agent any

    environment {
        // Activate virtual environment directory
        VENV_DIR = 'venv'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/NirikshaShivalkar/DevOps-ToDo.git'
            }
        }

        stage('Set Up Python Environment') {
            steps {
                sh '''
                python3 -m venv ${VENV_DIR}
                . ${VENV_DIR}/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt || echo "No requirements.txt, skipping..."
                '''
            }
        }

        stage('Run Flask App') {
            steps {
                sh '''
                . ${VENV_DIR}/bin/activate
                export FLASK_APP=app.py
                flask run &
                sleep 5
                '''
            }
        }

        stage('Post-run / Clean') {
            steps {
                sh 'echo "Flask App Started Successfully. Add tests or deployment steps here."'
            }
        }
    }
}
